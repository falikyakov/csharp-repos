@using React.Web.Mvc

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="https://unpkg.com/react@16/umd/react.production.min.js"></script>
<script src="https://unpkg.com/react-dom@16/umd/react-dom.production.min.js"></script>
<script src="https://unpkg.com/babel-standalone@6.15.0/babel.min.js"></script>
<script src="~/Scripts/react/naming.js"></script>

<h2>React tutorial!!!</h2>
<br />

<br />
<div id="root"></div>

<h1 style="background-color:lavenderblush">Hi</h1>
@*<div id="mydiv"></div>*@

<script type="text/babel">

    class Hello extends React.Component {
      render() {
        return <h1>Hello Primitive</h1>;
      }
    }

    const Bye=()=>{
        return(
<h2>@ViewBag.message</h2>
        )
    }

    ReactDOM.render(
<div>
    <Naming />
    <Hello />
    <Bye />
</div>,
      document.getElementById("mydiv")
    );
</script>

@Html.React("Hello", new { })

@section scripts{
    <script src="~/Scripts/react/dist/bundle.js"></script>
}

